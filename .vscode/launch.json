    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Windows",
            "program": "${workspaceFolder}\\server\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mac",
            "program": "${workspaceFolder}/dist/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build Project",
            "program": "${workspaceFolder}/src/server.ts",
            // "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/dist/**/*"
            ]
        }
    ]
}